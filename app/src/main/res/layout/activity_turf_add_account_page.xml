<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.willconjo.turfspnt.TurfAddAccountPage">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="386dp"
        android:layout_height="68dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="63dp"
        android:layout_height="66dp"
        app:srcCompat="@drawable/logo2"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="383dp"
        android:layout_height="498dp"
        android:layout_marginTop="65dp"
        android:orientation="vertical"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:fontFamily="@font/comfortaa"
            android:paddingRight="10dp"
            android:text="Please enter your monthly spending limit in the box below."
            android:textAlignment="center"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/monthlyEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:fontFamily="@font/comfortaa"
            android:hint="Monthly spending limit"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:fontFamily="@font/comfortaa"
            android:paddingRight="10dp"
            android:text="If your above entry included rent, what is your current monthly rent expenditure?"
            android:textAlignment="center"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/rentEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:ems="10"
            android:fontFamily="@font/comfortaa"
            android:inputType="textPersonName"
            android:text="0.00"
            android:textAlignment="center"
            android:textSize="18dp" />

        <Button
            android:id="@+id/createButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/comfortaa"
            android:text="create account"
            android:textColor="@color/widgetTextNormal"
            android:textSize="18dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
