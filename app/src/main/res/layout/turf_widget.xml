<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#666"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/widgetDailyBudgetDollarsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#666"
        android:fontFamily="@font/comfortaa"
        android:includeFontPadding="false"
        android:text="@string/widgetDailyBudgetDollarsText"
        android:textColor="@color/widgetTextNormal"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widgetDailyBudgetCentsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/widgetDailyBudgetDollarsText"
        android:layout_toEndOf="@+id/widgetDailyBudgetDollarsText"
        android:layout_toRightOf="@+id/widgetDailyBudgetDollarsText"
        android:fontFamily="@font/comfortaa"
        android:includeFontPadding="false"
        android:text="@string/widgetDailyBudgetCentsText"
        android:textColor="@color/widgetTextNormal"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widgetDailyTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:fontFamily="@font/comfortaa"
        android:paddingBottom="3dp"
        android:text="@string/widgetDailyTitleText"
        android:textColor="@color/widgetTextNormal"
        android:textSize="16dp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="@style/CustomProgressBar"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widgetDailyBudgetDollarsText"
        android:layout_centerHorizontal="true"
        android:progress="50"
        android:max="100"
        android:secondaryProgress="75"
        android:layout_marginTop="3dp"/>

</RelativeLayout>